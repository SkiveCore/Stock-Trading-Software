Options -Indexes
ErrorDocument 404 /404.php
ErrorDocument 403 /404.php
ServerSignature Off

<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    # Comment out Strict-Transport-Security for local development
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    Header always set Referrer-Policy "no-referrer-when-downgrade"
    # Remove or comment out the existing CSP to let PHP handle it
    # Header always set Content-Security-Policy "default-src 'self';"
</IfModule>
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

<FilesMatch "(^#.*#|\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist)|~)$">
    Require all denied
</FilesMatch>
<IfModule mod_headers.c>
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://esm.run; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://cdnjs.cloudflare.com https://fonts.gstatic.com; connect-src 'self'; img-src 'self' data:; object-src 'none'; frame-ancestors 'none'; base-uri 'self'; form-action 'self';"
</IfModule>

RewriteEngine On
RewriteRule ^wallet$ wallet.php [L]
RewriteRule ^transactions$ transactions.php [L]
RewriteRule ^(@?)([a-zA-Z0-9]+)$ stocks.php?symbol=$2 [L,QSA]